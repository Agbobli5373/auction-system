<% layout('layouts/boilerplate') %>

<div>

    <form action="/users/addAddress" method="post">
        <div>
            <h1>Shipping Address</h1>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="s_name" placeholder="Full name" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" class="form-control" name="s_phoneNumber" id="phoneNumber" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="s_address" class="form-control" id="address" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="s_city" class="form-control" id="city" required>
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <input type="text" name="s_state" class="form-control" id="state" required>
            </div>
            <div class="form-group">
                <label for="zip">Pincode</label>
                <input type="text" name="s_pincode" class="form-control" id="zip" required>
            </div>
        </div>
        <div>
            <p>Billing address same as shipping address</p>
            <input type="checkbox" name="same" value="1">
        </div>
        <div>
            <h1>Billing Address</h1>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="b_name" placeholder="Full name" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" class="form-control" name="b_phoneNumber" id="phoneNumber" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="b_address" class="form-control" id="address" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="b_city" class="form-control" id="city" required>
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <input type="text" name="b_state" class="form-control" id="state" required>
            </div>
            <div class="form-group">
                <label for="zip">Pincode</label>
                <input type="text" name="b_pincode" class="form-control" id="zip" required>
            </div>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-block mt-4 btn-lg">Submit</button>
        </div>
    </form>
</div>