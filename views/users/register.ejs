<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/register.css" />

        <div class="loginForm">
            <div class="loginH1">Sign Up</div>
            <!-- <div class="card-text"> -->

                <form action="/users" method="POST" enctype="multipart/form-data">
                    
                    <div class="">
                        <label class="formLable" for="firstName">First Name</label>
                        <input type="text" name="firstName" class="formInput" id="firstName" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="lastName" class="">Last Name</label>
                        <input type="text" name="lastName" class="formInput" id="lastName" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="email" class="">Email</label>
                        <input type="email" name="email" class="formInput" id="email" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="avatar" class="formInput">Profile Pic</label>
                    </div>
                    <div class="">
                        <input id="avatar" type="file" class="formInput" name="avatar" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="dob" class="">DOB</label>
                        <input type="date" name="dob" class="formInput" id="dob" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="password" class="">Password</label>
                        <input type="password" name="password" class="formInput" id="password" required>
                    </div>
                    <div class="">
                        <label class="formLable" for="phoneNumber" class="">Phone Number</label>
                        <input type="text" name="phoneNumber" class="formInput" id="phoneNumber" required>
                    </div>
                    <div class="">
                        <button type="submit" class="formSubmitButton">Submit</button>
                    </div>
</form>


            <!-- </div> -->
        </div>
