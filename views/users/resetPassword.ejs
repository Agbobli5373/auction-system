<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/login.css" />

<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h1 class="text-center display-1">Reset your password</h1>
                
                <form action="/users/reset-password" method="POST">
                    <div class="form-group">
                        <label for="">Email</label>
                        <input name="email" type="email" class="form-control form-control-lg" id="email" />
                    </div>
                    <div class="form-group">
                        <label for="">OTP</label>
                        <a href="#" style="float: right; font-size: 12px">Forgot Password</a>
                        <input name="otp" type="text" class="form-control form-control-lg" id="password" />
                    </div>
                    <div class="form-group">
                        <label for="">New Password</label>
                        <a href="#" style="float: right; font-size: 12px">Forgot Password</a>
                        <input name="password" type="password" class="form-control form-control-lg" id="password" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg button-center">
                            Make it so!
                        </button>
                    </div>
                </form>
        </div>
    </div>
</div>