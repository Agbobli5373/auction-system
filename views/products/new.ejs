<% layout('layouts/boilerplate') %>


<link rel="stylesheet" href="/css/styles.css" />

<div class="formContainer-signup container">
    <div class="loginForm">
            <div class="loginH1">List a new product<br>for auction:</div>
            <form action="/products/new" method="POST" enctype="multipart/form-data">
                <div class="formGrid">
                    <div class="formSection">
                        <label class="formLable" for="title">Title</label>
                        <input type="text" name="title" class="formInput" id="title" required>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="description">Description</label>
                        <input type="text" name="description" class="formInput" id="description" required>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="base_price">Base Price</label>
                        <input type="number" name="basePrice" step="any" class="formInput" id="base_price" required>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="category">Select Category</label>
                    
                        <select class="formInput" name="category" class="form-control" id="category" required>
                            <option value="art">Art</option>
                            <option value="antiques">Antiques</option>
                            <option value="vehicle">Vehicle</option>
                            <option value="books">Books</option>
                            <option value="collectible">Collectible</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="images">Add Image</label>
                        <input type="file" name="images" class="formInput" id="images" multiple required>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="startTime">Start Time</label>
                   
                        <input type="datetime-local" name="startTime" class="formInput" id="startTime" required>
                    </div>
                    <div class="formSection">
                        <label class="formLable" for="duration">Duration</label>
                        <select class="formInput" name="duration" class="formInput" id="duration" required>
                            <option value="3">3 days</option>
                            <option value="5">5 days</option>
                            <option value="7">7 days</option>
                            <option value="10">10 days</option>
                        </select>
                    </div>
                </div>
                <div class="formSection">
                    <button type="submit" class="formSubmitButton">Put this up for bidding</button>
                </div>
            </form>
    </div>
</div>

