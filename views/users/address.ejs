<% layout('layouts/boilerplate') %>

<div>

    <form action="/users/address">
        <div>
            <h1>Shipping Address</h1>
       
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="s_address" class="form-control" id="address" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="s_city" class="form-control" id="city" required>
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <input type="text" name="s_state" class="form-control" id="state" required>
            </div>
            <div class="form-group">
                <label for="zip">Zip</label>
                <input type="text" name="s_zip" class="form-control" id="zip" required>
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" name="s_country" class="form-control" id="country" required>
            </div>
        </div>
        <div>
            <p>Billing address same as shipping address</p>
            <input type="checkbox" name="same" value="1">
        </div>
        <div>
            <h1>Billing Address</h1>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" name="b_address" class="form-control" id="address" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" name="b_city" class="form-control" id="city" required>
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <input type="text" name="b_state" class="form-control" id="state" required>
            </div>
            <div class="form-group">
                <label for="zip">Zip</label>
                <input type="text" name="b_zip" class="form-control" id="zip" required>
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" name="b_country" class="form-control" id="country" required>
            </div>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-block mt-4 btn-lg">Submit</button>
        </div>
    </form>
</div>